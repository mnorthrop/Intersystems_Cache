%SecurityCopy	;This routine is installed into each instance and uses Export/Import to have the same list of users in each instance.
 WRITE "Use one of the following entry points:"
 WRITE !,"Export"
 WRITE !,"Import"
 QUIT
 
 // This procedure exports specified globals from the instance to /tmp/yyyymmdd_sec_export.xml file
Export()
	// Set variables
	SET inst=$PIECE($SYSTEM,":",2)
	SET yyyymmdd=$ZDATETIME($PIECE($HOROLOG,",",1),8)
	SET exportFile="/tmp/"_yyyymmdd_"_sec_export.xml"
	SET secGlobals=^ConfigGlobal("SecurityCopy", "EXPORT")
	SET newNSP=^ConfigGlobal("SecurityCopy","EXPORT_LOC",inst)
	SET newNSPcmd="^^"_newNSP

	// Change to correct environment
	ZNSPACE newNSPcmd

	// Create command to export
	SET globals=$REPLACE(secGlobals,"|",".GBL,")_".GBL"
	WRITE !,!,"Export file location: "_exportFile,!,!

	// Export
	DO $SYSTEM.OBJ.Export(globals,exportFile)

	QUIT

 // This procedure imports globals from the /tmp/yyyymmdd_sec_export.xml file
Import() 
	// Set variables
	SET inst = $PIECE($SYSTEM,":",2)
	SET yyyymmdd = $ZDATETIME($PIECE($HOROLOG,",",1),8)
	SET importFile = "/tmp/"_yyyymmdd_"_sec_export.xml"
	SET secGlobals =^ConfigGlobal("SecurityCopy", "EXPORT")

	// Clear previous data
	FOR i=1:1:$LENGTH(secGlobals,"|") {
		SET piece = $PIECE(secGlobals,"|",i)
		SET killCmd = "^"_piece
		KILL killCmd
	}

	// Set index
	SET key = $OPEN(^ConfigGlobal("SecurityCopy","IMPORT_LOC",inst,""))
	WHILE (key '= "") {
		// For each namespace do import
		SET newNSP = ^ConfigGlobal("SecurityCopy","IMPORT_LOC",inst,key)
		SET newNSPcmd="^^"_newNSP
		ZNSPACE newNSPcmd
		WRITE !,"***** Importing into instance "_inst_" namespace "_key
		DO $SYSTEM.OBJ.Load(importFile,"h")

		// Set iteration for next key
		ZNSPACE "%SYS"
		SET key = $o(^ConfigGlobal("SecurityCopy","IMPORT_LOC",inst,key))
	}
	QUIT
